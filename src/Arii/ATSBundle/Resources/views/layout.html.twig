function StateRibbon (itemid,state) {
    switch(itemid) {
         case 'box':
            box = (state?1:0);
            globalLayout.progressOn();
            break;
         case 'only_warning':
            only_warning = (state?1:0);
            globalLayout.progressOn();
            break;
        default:
            alert(itemid);
    }
    GlobalRefresh();    
}

