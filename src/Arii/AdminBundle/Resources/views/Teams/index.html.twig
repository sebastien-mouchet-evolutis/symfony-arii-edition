                        myForm.setItemFocus('username');
                        myTeams.loadXML("{{ url('xml_Admin_teams_grid') }}");
                        myLayout.cells("a").progressOff();
                    } else
                    {
                        myLayout.cells("a").progressOff();
                        alert(response);
                    }
                });
            }
        break;
        case "add_user":
            myForm.clear();
            myForm.setItemFocus('username');
            //myForm.setItemValue('enterprise',"{{ app.session.get('enterprise') }}");
        break;
        case "delete_user":
        break;
        default:
            break;
    }
}

